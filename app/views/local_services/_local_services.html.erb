<table class="table table-hover table-bordered table-striped">
  <thead>
    <tr>
      <th>Цена</th>
      <th>Выполнил</th>
      <th>Коммент.</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @local_services.each do |local_service| %>
      <tr>
        <td><%= number_to_currency local_service.price %></td>
        <td><%= local_service&.user&.name %></td>
        <td><%= local_service.comment %></td>
        <td>
          <%= clink_to 'Посмотреть', sale_from_local_service_path(local_service.sale_from_local_service), 'fa-search' %>
          <%= cdlink_to 'удалить', local_service %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

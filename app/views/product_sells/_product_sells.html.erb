<%= turbo_frame_tag 'product_sells' do %>
  <table class="table table-hover table-bordered table-striped">
    <thead>
      <tr>
        <% unless defined?(shrink) %>
          <th>ID</th>
          <th>Покупатель</th>
        <% end %>
        <th>Товар/пачка</th>
        <th>Кол.</th>
        <th>Цена</th>
        <% if defined?(shrink) %>
          <th>Цена сум</th>
        <% else %>
          <th>Итого доход</th>
          <th>Исполнитель</th>
          <th>Оформлено в</th>
        <% end %>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% product_sells.each do |product_sell| %>
          <tr>
            <% unless defined?(shrink) %>
              <td><%= product_sell.id %></td>
              <td><%= product_sell.buyer.name %></td>
            <% end %>
            <td><%= product_sell.pack.name %></td>
            <td><%= product_sell.amount.to_i %></td>
            <% if defined?(shrink) %>
              <td><%= calculate_sale_price_in_usd(rate, product_sell) %></td>
              <td><%= calculate_sale_price_in_uzs(rate, product_sell) %></td>
            <% else %>
              <td><%= currency_convert(product_sell.price_in_usd, product_sell.sell_price) %></td>
            <% end %>
            <% unless defined?(shrink) %>
              <td><%= currency_convert(product_sell.price_in_usd, product_sell.total_profit) %></td>
              <td><%= product_sell.user.name %></td>
              <td><%= strf_datetime(product_sell.created_at) %></td>
              <td><%= clink_to 'Посмотреть с какой партии прихода был продан этот товар', product_sell, 'fa-search' %></td>
            <% end %>
            <td><%= cdlink_to 'Удалить', product_sell %></td>
          </tr>
        <% end %>
      </tbody>
  </table>

  <% if defined?(shrink) %>
    <div class='d-flex justify-content-around'>
    <% rate = CurrencyRate.last.rate %>
    <% total_in_usd = product_sells.price_in_usd.sum(:sell_price) + (product_sells.price_in_uzs.sum(:sell_price) / rate) %>
    <% total_in_uzs = product_sells.price_in_uzs.sum(:sell_price) + (product_sells.price_in_usd.sum(:sell_price) * rate) %>
    <b>ИТОГО ЦЕНА: <%= number_to_currency total_in_usd %></b>
    <b>ИТОГО ЦЕНА В CУМ: <%= num_to_usd total_in_uzs %></b>
    <b>ИТОГО КОЛИЧЕСТВО: <%= @sale.product_sells.sum(:amount) %></b>
  </div>
  <% end %>
<% end %>

<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Packs</h3>
      <%= link_to 'Добавить новый', new_pack_path, class: "btn btn-success min-width-btn" %>
    </div>

    <div class="card-body">
      <table class="table table-hover table-bordered table-striped">
        <thead>
          <tr>
            <th>Название</th>
            <th>код</th>
            <th>остаток</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @packs.each do |pack| %>
            <tr>
              <td><%= pack.name %></td>
              <td><%= pack.code %></td>
              <td><%= pack.initial_remaining %></td>
              <td><%= clink_to 'Посмотреть', pack_path(pack), 'fa-search' %></td>
              <td><%= clink_to 'Редактировать', edit_pack_path(pack), 'fa-edit' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Colors</h3>
      <%= link_to 'Добавить новый', new_color_path, class: "btn btn-success min-width-btn" %>
    </div>

    <div class="card-body">
      <table class="table table-hover table-sm table-bordered table-striped">
        <thead>
          <tr>
                        <th>Name</th>
                        <th>Hex</th>
                        <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @colors.each do |color| %>
            <tr>
                              <td><%= color.name %></td>
                              <td><%= color.hex %></td>
                            <td><%= clink_to 'Посмотреть', color_path(color), 'fa-search' %></td>
              <td><%= clink_to 'Редактировать', edit_color_path(color), 'fa-edit' %></td>
              <td><%= cdlink_to 'удалить', color %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

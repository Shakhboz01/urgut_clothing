<% if expenditure.total_paid < expenditure.price %>
  <%= clink_to 'Пополнить оставщегося сум', new_transaction_history_path(expenditure_id: expenditure.id), 'fa-money-bill-transfer' %>
<% end %>

<% if expenditure.transaction_histories.exists? %>
  <%= clink_to 'история пополнений', transaction_histories_path(expenditure_id: expenditure.id), 'fa-clock-rotate-left' %>
<% end %>

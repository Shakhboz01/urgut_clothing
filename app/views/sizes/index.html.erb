<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Sizes</h3>
      <%= link_to 'Добавить новый', new_size_path, class: "btn btn-success min-width-btn" %>
    </div>

    <div class="card-body">
      <table class="table table-hover table-sm table-bordered table-striped">
        <thead>
          <tr>
                        <th>Name</th>
                        <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @sizes.each do |size| %>
            <tr>
                              <td><%= size.name %></td>
                            <td><%= clink_to 'Посмотреть', size_path(size), 'fa-search' %></td>
              <td><%= clink_to 'Редактировать', edit_size_path(size), 'fa-edit' %></td>
              <td><%= cdlink_to 'удалить', size %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

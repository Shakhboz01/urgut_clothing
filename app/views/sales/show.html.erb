<div class='mx-2'>
  <div class="text-center card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title font-weight-bold">Продажа</h3>
  </div>
  <div class='row'>
    <% unless @sale.closed? %>
      <div class='col-sm-12 col-md-3'>
        <%= render 'product_sells/form', product_sell: @product_sell, products: @products %>
      </div>
    <% end %>
    <div class='col-sm-12 col-md-7'>
      <% unless @product_sells.count.zero? %>
        <%= render 'product_sells/product_sells', shrink: true, product_sells: @product_sells %>
      <% end %>
      <%= render 'total_info' %>
    </div>
    <% unless @sale.closed? %>
      <div class='col-sm-12 col-md-2'>
        <%= render 'sales/form', sale: @sale %>
      </div>
    <% end %>
  </div>
</div>


<script>
  $(document).ready(function() {
    $("input").focus(function() {
      $(this).select();
    });
  });
</script>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const params = new URLSearchParams(window.location.search);
    if (params.has('reload')) {
      location.reload();
    }
  });
</script>
